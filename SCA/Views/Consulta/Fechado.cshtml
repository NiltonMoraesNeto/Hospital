@model List<SCA.Model.Consulta>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Consulta Index";
}
<style>
    .table tr td, th {
        font-size: 11px;
    }

    .datetimepicker {
        z-index: 100000;
    }

    .espacamentoTd {
        padding: 3px;
    }

    .dropdown-new {
        font-size: 11px;
        max-height: 28px;
    }

    .bs-example {
        margin: 20px;
    }

    .icon-input-btn {
        display: inline-block;
        position: relative;
    }

        .icon-input-btn input[type="submit"] {
            padding-left: 2em;
        }

        .icon-input-btn .glyphicon {
            display: inline-block;
            position: absolute;
            left: 0.65em;
            top: 30%;
        }
</style>


<h2>Consultas Finalizadas</h2>




<div class="content" style="padding: 10px; width: 1120px">
    <table class="table table-striped">
        <tr>
            <th style="text-align:center">
                Paciente
            </th>
            <th style="text-align:center">
                Médico(a)
            </th>
            <th style="text-align:center">
                Título
            </th>
            <th style="text-align:center">
                Data da Consulta
            </th>
            <th style="text-align:center">Ações</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Pacientes.NomePaciente)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Usuarios.NomeUsuario)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.DataConsulta)
                </td>
                <td style="text-align:center">
                    <a href="@Url.Action("Edit", "Consulta", new { id = item.IdConsulta })" class="btn btn-xs btn-pen tooltipicon" data-title="Editar"><span class="glyphicon glyphicon-pencil"></span></a>
                    @*<a href="@Url.Action("Delete", "Consulta", new { id = item.IdConsulta })" class="btn btn-xs btnLixo tooltipicon" data-title="Excluir"><span class="glyphicon glyphicon-trash"></span></a>*@
            </tr>
        }
    </table>

</div>

<script>
    $(".tooltipicon").ggtooltip({ textcolor: "#FFF", backcolor: "#3C3C3C", bordercolor: "#3C3C3C", placement: "top" });
</script>