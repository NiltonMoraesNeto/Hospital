@model SCA.Model.Pacientes

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar Paciente</h2>

<div class="content">

    <h3>Tem certeza que deseja excluir?</h3>
    <hr />

    <table class="CadPro">
        <tr>
            <td class="negrito">ID Paciente</td>
            <td>@Html.DisplayFor(model => model.IdPaciente)</td>
        </tr>
        <tr>
            <td class="negrito">Descrição</td>
            <td>@Html.DisplayFor(model => model.NomePaciente)</td>
        </tr>
    </table>
    <hr />
    <table class="CadPro">
        <tr>
            <td>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Excluir" class="btn btnRed" style="width:85px;height:34px" />
                    <a href='@Url.Action("/", "Pacientes")'>
                        <input type="button" class="btn btnWhite dropdown-toggle" value="Cancelar" />
                    </a>
                }
            </td>
        </tr>
    </table>
</div>